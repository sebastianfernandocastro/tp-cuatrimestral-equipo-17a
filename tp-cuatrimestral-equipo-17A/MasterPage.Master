                        <li>
                            <asp:LinkButton CssClass="dropdown-item" ID="btnCerrarSesion1" OnClick="CerrarSesion" runat="server">Cerrar sesion</asp:LinkButton></li>
                    </ul>
                </div>
                <%break;
