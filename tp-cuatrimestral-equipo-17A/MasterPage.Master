        #siteFooter {
            background-color: #222;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            font-size: 14px;
            position: relative;
            bottom: 0;
            width: 100%;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
            margin-top: 5px;
        }

            #siteFooter .footer-content {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 20px;
            }

            #siteFooter a {
                color: #4caf50;
                text-decoration: none;
                margin: 0 5px;
            }

                #siteFooter a:hover {
                    text-decoration: underline;
                }
    </style>
